@{
    Layout = null;
}


<html>
<head>
    <title></title>
</head>
<body>
    <div class="main">
        <div id="loginBlock">
            Enter login:<br />
            <input id="txtUserName" type="text" />
            <input id="btnLogin" type="button" value="Sing In" />
        </div>
        <div id="chatBody">
            <div id="main_div" >
                <div id="chatroom" style="position:absolute;left:250px;top:0px; width:800px;height:400px; overflow:auto"></div>

                <div id="inputForm">
                    <input type="text" id="message" style="position:absolute; width:700px;height:40px;left:250px;top:460px" />
                    <input type="button" id="sendmessage" value="send" style="position:absolute; width:100px;height:40px;left:950px;top:460px" />
                </div>
            </div>
            <div id="chatusers" style="background-color:antiquewhite; position:absolute;width:250px;height:500px; left:0px;top:0px">
                <div id="header"></div>
                <p style="color:red"><b>Active Users...</b></p>
            </div>
            
        </div>
        <input id="hdId" type="hidden" />
        <input id="username" type="hidden" />
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2-preview1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/util.js"></script>

</body>
</html>