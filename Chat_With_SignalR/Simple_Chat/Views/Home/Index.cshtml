@{
    Layout = null;
}


<html>
<head>
    <title></title>
</head>
<body>
    <div class="main">
        <div id="loginBlock">
            Enter login:<br />
            <input id="txtUserName" type="text" />
            <input id="btnLogin" type="button" value="Sing In" />
        </div>
        <div id="chatBody">

            <div id="chatroom" style="position:absolute;left:100px;top:0px; width:300px;height:400px; overflow:auto"></div>

            <div id="chatusers" style=" background-color:antiquewhite; position:absolute;width:100px;height:500px; left:0px;top:0px">
                <div id="header"></div>
                <p><b>Active Users...</b></p>
            </div>
            <div id="inputForm">
                <input type="text" id="message" style="position:absolute; width:200px;height:100px;left:100px;top:400px" />
                <input type="button" id="sendmessage" value="send" style="position:absolute; width:100px;height:100px;left:300px;top:400px" />
            </div>
        </div>
        <input id="hdId" type="hidden" />
        <input id="username" type="hidden" />
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2-preview1.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/util.js"></script>

</body>
</html>